<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    tools:context="com.zhaohe.zhundao.ui.login.LoginActivity">

    <ImageView
        android:id="@+id/img_ico"
        android:src="@mipmap/logo_multi"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_marginTop="50dp"
        android:layout_below="@id/img_ico"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@mipmap/mobile"
        android:id="@+id/et_phone"
        android:hint="@string/et_phone"
        android:drawablePadding="5dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_phone"
        android:drawableLeft="@mipmap/password"
        android:drawablePadding="5dp"

        android:hint="@string/et_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"

        />

    <Button
        android:id="@+id/btn_login"
        android:text="@string/btn_login"
        android:layout_below="@id/et_password"
        style="@style/btn_login" />

    <TextView
        android:layout_marginTop="10dp"
android:layout_marginLeft="30dp"
        android:id="@+id/tv_back"
        android:layout_below="@id/btn_login"
        android:text="找回密码"
        android:visibility="gone"
        android:textColor="@color/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:id="@+id/tv_reg"
        android:layout_below="@id/btn_login"
        android:text="注册/密码找回"
        android:layout_alignParentRight="true"
        android:textColor="@color/status_color_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="80dp"
        android:scaleType="matrix"
        android:id="@+id/btn_login_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/wechat"
        android:background="#e6e6e6"
        android:layout_below="@id/btn_login"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_login_wechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_login_wechat" />
</RelativeLayout>
