<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlGridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dip"
        android:background="@drawable/gridview">

        <ImageView
            android:id="@+id/iv_gridview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/tv_nameGridview"
            android:textColor="@drawable/selector_index_textcolor"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_gridview"
            android:layout_centerHorizontal="true"
            android:paddingBottom="12dp"
            android:paddingTop="6dp"
            android:text="name" />


    </RelativeLayout>

</FrameLayout>