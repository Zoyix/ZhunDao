<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_find_beacon_icon"
        android:layout_margin="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_find_beacon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_dialog_cancel"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/iv_find_beacon_icon"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tv_find_beacon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_dialog_cancel"
        android:layout_below="@id/tv_find_beacon_title"
        android:layout_toRightOf="@id/iv_find_beacon_icon"
        android:layout_marginTop="5dp"
        android:textSize="12sp" />

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right"
        android:layout_alignParentRight="true" />
</RelativeLayout>
