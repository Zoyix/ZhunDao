<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_invitation_person"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_invitation_person"
    tools:context="com.zhaohe.zhundao.ui.home.action.signlist.InvitationPersonActivity">





    <TextView
        android:id="@+id/tv_dialog_title"
        android:maxLines="2"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="275dp"
        android:text="@string/dialog_feedback"
        android:textColor="@color/white"
        android:textSize="24sp" />
    <TextView
        android:layout_marginTop="68dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"

        android:layout_below="@id/tv_dialog_title"
        android:id="@+id/tv_name"
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_vcode_invitation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/tv_name"
        />

    <TextView
        android:textColor="@color/white"

        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/iv_vcode_invitation"
        android:id="@+id/tv_time"
        android:text="@string/tv_sign_stoptime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
    android:textColor="@color/white"
    android:layout_marginLeft="40dp"
    android:layout_below="@id/tv_time"
    android:id="@+id/tv_add"
    android:text="@string/add"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />


</RelativeLayout>
