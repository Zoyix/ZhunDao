<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.zhaohe.zhundao.ui.home.mine.UpdateUserInfoActivity">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_head"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:layout_alignParentRight="true"

                android:src="@drawable/unkown_head" />
            />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />

            <EditText
                android:id="@+id/et_name"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="150dp"
                android:inputType="none"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_nickname"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />

            <EditText
                android:id="@+id/et_nickname"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tv_phone"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="150dp"
                android:text="@string/phone"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />

            <EditText
                android:id="@+id/et_email"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sex"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />


            <Spinner
                android:paddingLeft="50dp"
                android:id="@+id/sp_sex"
                android:layout_width="150dp"
                android:gravity="center|center_horizontal"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:entries="@array/sex"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                ></Spinner>

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />

            <EditText
                android:id="@+id/et_unit"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/industry"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />

            <EditText
                android:id="@+id/et_industry"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duty"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />

            <EditText
                android:id="@+id/et_duty"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <Button
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:id="@+id/btn_login"
            android:text="@string/ok"
            style="@style/btn_login" />
    </LinearLayout>
</ScrollView>