<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />

            <RelativeLayout
                android:id="@+id/view_user"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/setting_item_selector"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/img_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/unkown_head"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />


                <TextView
                    android:id="@+id/tv_min_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/img_head"
                    android:text="@string/tab_min"
                    android:textSize="18sp" />

                <!--<TextView-->
                <!--android:id="@+id/tvmsg"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/tv_min_name"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_toRightOf="@id/img_head"-->
                <!--android:text="@string/tab_act"-->
                <!--android:textSize="12sp" />-->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/right"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_sex"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/tv_min_name"
                    android:src="@drawable/ic_sex_male"
                    android:layout_toEndOf="@+id/img_head"
                    android:layout_toRightOf="@+id/img_head" />
            </RelativeLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />

            <TextView
                android:id="@+id/tv_my_wallet"
                android:layout_marginTop="20dp"
                android:clickable="true"
                style="@style/list_txt_Style"
                android:drawableLeft="@mipmap/wallet72"
                android:text="@string/tv_my_wallet" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />

            <TextView
                android:id="@+id/tv_myaddressbook"
                style="@style/list_txt_Style"
                android:clickable="true"
                android:drawableLeft="@drawable/icon_me_smail"
                android:drawablePadding="10dp"
                android:text="@string/tv_myaddressbook"
                android:visibility="gone" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />

            <TextView
                android:id="@+id/tv_feedback"
                style="@style/list_txt_Style"
                android:clickable="true"
                android:drawableLeft="@mipmap/feedback72"
                android:text="@string/tv_feedback" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/tv_min_setting"
                style="@style/list_txt_Style"
                android:clickable="true"
                android:drawableLeft="@mipmap/setting72"
                android:text="@string/tv_setting" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>