<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />

            <RelativeLayout
                android:id="@+id/view_user"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/setting_item_selector"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/img_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/unkown_head" />


                <TextView
                    android:id="@+id/tv_min_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/img_head"
                    android:text="@string/tab_min"
                    android:textSize="18sp" />

                <!--<TextView-->
                <!--android:id="@+id/tvmsg"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/tv_min_name"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_toRightOf="@id/img_head"-->
                <!--android:text="@string/tab_act"-->
                <!--android:textSize="12sp" />-->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/right"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_sex"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/tv_min_name"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/img_head"
                    android:layout_toRightOf="@+id/img_head"
                    android:src="@drawable/ic_sex_male"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_min_vip"
                    android:layout_width="30dp"
                    android:layout_height="0dp"
                    android:layout_above="@+id/tv_min_phone"
                    android:layout_alignTop="@+id/tv_min_name"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_min_name"
                    android:background="@drawable/shape_oval_vip"
                    android:clickable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="V3"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_min_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_min_name"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@id/img_head"
                    android:text="@string/phone"


                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="15dp" />
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />


            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/tv_my_inf"
                android:clickable="true"
                style="@style/list_txt_Style"
                android:drawableLeft="@mipmap/inf108"
                android:text="@string/tv_setting_inf" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />

            <TextView
                android:layout_marginTop="20dp"

                android:id="@+id/tv_my_idcard"
                android:clickable="true"
                style="@style/list_txt_Style"
                android:drawableLeft="@mipmap/idcard108"
                android:text="@string/tv_idcard" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />

            <TextView

                android:id="@+id/tv_my_wallet"
                android:clickable="true"
                style="@style/list_txt_Style"
                android:drawableLeft="@mipmap/wallet108"
                android:text="@string/tv_my_wallet" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />

            <TextView

                android:id="@+id/tv_my_msg"
                android:clickable="true"
                style="@style/list_txt_Style"
                android:drawableLeft="@mipmap/msg108"
                android:text="@string/tv_my_msg" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />

            <TextView
                android:id="@+id/tv_contacts"
                style="@style/list_txt_Style"
                android:clickable="true"
                android:drawableLeft="@mipmap/contacts108"
                android:drawablePadding="10dp"
                android:text="@string/tv_myaddressbook"
                android:visibility="visible" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />

            <TextView
                android:id="@+id/tv_feedback"
                style="@style/list_txt_Style"
                android:clickable="true"
                android:drawableLeft="@mipmap/feedback108"
                android:text="@string/tv_feedback" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/tv_min_setting"
                style="@style/list_txt_Style"
                android:clickable="true"
                android:drawableLeft="@mipmap/setting108"
                android:text="@string/tv_setting" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:background="@color/black3" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>