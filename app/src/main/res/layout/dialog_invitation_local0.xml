<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/bg_invitation"
    tools:context="com.zhaohe.zhundao.ui.home.action.more.InvitationActivity">

    >

    <TextView
        android:id="@+id/tv_dialog_title"
        android:maxLength="20"
        android:maxLines="2"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="120dp"
        android:text="@string/dialog_feedback"
        android:textColor="@color/white"
        android:textSize="12sp" />


    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_vcode_invitation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/tv_dialog_title" />

    <TextView
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/iv_vcode_invitation"
        android:id="@+id/tv_time"
        android:text="@string/tv_sign_stoptime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tv_time"
        android:id="@+id/tv_add"
        android:maxLength="20"
        android:text="@string/add"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
</RelativeLayout>
