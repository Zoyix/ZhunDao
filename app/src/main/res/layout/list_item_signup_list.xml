<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">

    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:id="@+id/img_signuplist_status"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/check_on"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_signuplist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_signuplist_status"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="@string/name" />

    <TextView
        android:id="@+id/tv_signuplist_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_signuplist_status"
        android:text="200"
        android:textSize="12sp"

        android:layout_below="@id/tv_signuplist_name" />

    <TextView
        android:id="@+id/tv_signuplist_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:layout_alignBottom="@id/tv_signuplist_phone"
        android:layout_marginRight="5dp"
        android:text="@string/phone" />
    <Button
        android:padding="0dp"
        android:id="@+id/btn_signuplist_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_sign_signup"
        android:textSize="12sp"
android:background="@color/umeng_socialize_divider"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignBottom="@+id/img_signuplist_status" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="7dp"
    android:layout_below="@id/tv_signuplist_phone"

    android:id="@+id/textView" />
</RelativeLayout>
