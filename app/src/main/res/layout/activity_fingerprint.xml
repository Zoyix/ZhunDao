<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >       
    </LinearLayout>
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
         android:gravity="center_horizontal"
        >
      <ImageView
	        android:id="@+id/ivFingerImg"
	        android:layout_width="256px"
	        android:layout_height="360px"
	        android:background="@color/white"
	        android:gravity="center_vertical"
	        android:scaleType="fitXY"	        
	/>

      <TextView
          android:id="@+id/tvFingerReaderMsg"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=" " />

      <ProgressBar
          android:id="@+id/progressBar1"
          style="?android:attr/progressBarStyleHorizontal"
          android:layout_width="200px"
          android:layout_height="3dp"
          android:max="100"
        />
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/btnScanAndShowImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫描并显示指纹图像" />

        <Button
            android:id="@+id/btnIDcard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="二代证"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnGetFingerImg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="显示"
            android:textSize="18dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnSetIP"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="设置" 
            android:textSize="18dp"
            android:visibility="gone"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        
        >

        <Button
            android:id="@+id/btnScanFinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫描第一枚指纹"
            android:textSize="15dp" />

         <Button
            android:id="@+id/btnScanFp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫描第二枚指纹" 
            android:textSize="15dp"/>

         <Button
             android:id="@+id/btnMatch"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="对比"
             android:textSize="16dp" />
        
    </LinearLayout>

    </LinearLayout>
   
</LinearLayout>