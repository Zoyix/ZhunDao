<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_invitation_person"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.zhaohe.zhundao.ui.home.action.more.InvitationActivity">




    <TextView
        android:id="@+id/tv_dialog_title"
        android:maxLines="2"
        android:maxLength="20"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="160dp"
        android:text="@string/dialog_feedback"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:layout_marginTop="45dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
android:textSize="10sp"
        android:layout_below="@id/tv_dialog_title"
        android:id="@+id/tv_name"
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_vcode_invitation"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/tv_name"
        />

    <TextView
        android:textColor="@color/white"
        android:textSize="8sp"

        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/iv_vcode_invitation"
        android:id="@+id/tv_time"
        android:text="@string/tv_sign_stoptime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="8sp"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/tv_time"
        android:id="@+id/tv_add"
        android:text="@string/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />
</RelativeLayout>
