<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tv_inf_id"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/tv_inf_id">

        <TextView
            android:id="@+id/tv_signlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="名称"
            android:textSize="12sp"

            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_inf_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2011-11-11"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/tv_signlist_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18888888888"
            android:textSize="12sp"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/tv_signlist_status"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报名成功"
            android:textSize="12sp"

            android:textColor="@color/status_color_green"
            android:layout_marginBottom="5dp" />
    </LinearLayout>


</RelativeLayout>
