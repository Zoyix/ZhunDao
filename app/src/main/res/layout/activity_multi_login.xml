<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6">

    <ImageView
        android:id="@+id/img_ico_multi"
        android:src="@mipmap/logo_multi"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_marginTop="40dp"
        android:layout_below="@id/img_ico_multi"
        android:layout_centerHorizontal="true"
        android:id="@+id/et_sign_id_multi"
        android:hint="@string/et_sign_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_below="@id/et_sign_id_multi"
        android:layout_centerHorizontal="true"
        android:id="@+id/et_phone_multi"
        android:hint="@string/et_phone"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_password_multi"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/et_phone_multi"
        android:hint="@string/et_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"

        />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_login_multi"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_below="@id/et_password_multi"
        android:layout_height="wrap_content"
        style="@style/btn_login"
        android:text="登录"
        android:textColor="@color/white" />

    <TextView
        android:padding="5dp"
        android:id="@+id/tv_multi_introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_multi_introduce"
        android:clickable="true"
        android:layout_below="@+id/btn_login_multi"
        android:layout_alignRight="@+id/btn_login_multi"
        android:layout_alignEnd="@+id/btn_login_multi"
        android:layout_marginTop="18dp" />

</RelativeLayout>

