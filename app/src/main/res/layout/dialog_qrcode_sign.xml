<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="330dp"
    >
    <TextView
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:maxLength="15"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_qr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="标题111111111111111111111111111111111"
        />
    <ImageView
        android:id="@+id/iv_dialog_qrcode_sign"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/tv_qr_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginTop="5dp"

        android:id="@+id/tv_qr_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签到"
        android:layout_centerHorizontal="true"

        android:layout_below="@+id/tv_qr_title"
   />



    <TextView
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/iv_dialog_qrcode_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫一扫图中二维码，进行签到"
        android:textColor="@color/font_gray"
        />
</RelativeLayout>
