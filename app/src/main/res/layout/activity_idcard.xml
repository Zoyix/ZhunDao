<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ll_edit"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.zhaohe.zhundao.ui.home.mine.UpdateUserInfoActivity">


        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                android:text="@string/name"
                style="@style/tv_title" />

            <EditText
                android:id="@+id/et_name"
                style="@style/et_no_line" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView

                android:text="@string/phone"
                style="@style/tv_title" />

            <EditText

                style="@style/et_no_line"
                android:id="@+id/et_phone"

                android:inputType="phone"

                />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                style="@style/tv_title"
                android:text="@string/id_card" />

            <EditText
                android:id="@+id/et_idcard"
                style="@style/et_no_line" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                style="@style/tv_title"
                android:text="@string/id_card_front" />

            <GridLayout
                android:id="@+id/camera_idcard_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:useDefaultMargins="true">

            </GridLayout>

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                style="@style/tv_title"
                android:text="@string/id_card_back" />


            <GridLayout
                android:id="@+id/camera_idcard_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:useDefaultMargins="true">

            </GridLayout>

        </RelativeLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <Button
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:id="@+id/btn_login"
            android:text="@string/ok"
            style="@style/btn_login" />

        <TextView
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="@string/tv_idcard_none"
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ok"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:src="@drawable/status_ok"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:textSize="24sp"
            android:text="@string/tv_idcard_1"
            style="@style/tv_status_center" />

        <TextView

            android:id="@+id/tv_name"
            android:text="@string/name"
            style="@style/tv_status_center_idcard" />

        <TextView

            android:id="@+id/tv_phone"
            android:text="@string/phone"
            style="@style/tv_status_center_idcard" />

        <TextView

            android:id="@+id/tv_idcard"
            android:text="@string/id_card"
            style="@style/tv_status_center_idcard" />

    </LinearLayout>
</RelativeLayout>
