<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.zhaohe.zhundao.ui.home.mine.UpdateUserInfoActivity">


        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />

            <EditText
                android:id="@+id/et_name"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="150dp"
                android:inputType="none"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />

            <EditText
                android:id="@+id/et_phone"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"
                android:inputType="phone"
                android:layout_alignParentRight="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id_card"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />

            <EditText
                android:id="@+id/et_idcard"
                android:gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id_card_front"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />

            <GridLayout
                android:id="@+id/camera_idcard_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:useDefaultMargins="true">

            </GridLayout>

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id_card_back"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:layout_centerVertical="true" />


            <GridLayout
                android:id="@+id/camera_idcard_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:useDefaultMargins="true">

            </GridLayout>

        </RelativeLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:background="@color/black3" />

        <Button
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:id="@+id/btn_login"
            android:text="@string/ok"
            style="@style/btn_login" />

        <TextView
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="@string/tv_idcard_none"
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
